<Border x:Class="Tea2D.Trace.Views.Controls.TabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tea2D.Trace.Views.Controls"
             mc:Ignorable="d"
             CornerRadius="5"
             d:DesignHeight="40" d:DesignWidth="40">
    <Border.Style>
        <Style TargetType="local:TabItem">
            <Setter Property="Background" Value="{StaticResource MenuItemBackgroundBrush}"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MenuItemSecondaryBackgroundBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource MenuItemSelectedBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Border.Style>
    <Image x:Name="Image"/>
</Border>
